<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zigbee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="switch">
		<label>Switch</label>
		<description>Turn a device on and off</description>
		<channels>
			<channel id="switch" typeId="switch" />
		</channels>
	</thing-type>

	<thing-type id="dimmer">
		<label>Dimmer</label>
		<description>Set the light brightness</description>
		<channels>
			<channel id="dimmer" typeId="dimmer" />
		</channels>
	</thing-type>

	<thing-type id="temperature">
		<supported-bridge-type-refs>
			<bridge-type-ref id="coordinator_cc2530" />
		</supported-bridge-type-refs>
	
		<label>Temperature</label>
		<description>Temperature</description>
		<channels>
			<channel id="temperature" typeId="temperature" />
		</channels>
		<config-description>
            <parameter name="networkId" type="text">
                <label>MAC ID</label>
                <description>The MAC address of the sensor.</description>
                <required>true</required>
            </parameter>
        </config-description>
	</thing-type>

	<thing-type id="temp_humidity">
		<label>Temperature</label>
		<description>Temperature</description>
		<channels>
			<channel id="humidity" typeId="humidity" />
			<channel id="temperature" typeId="temperature" />
		</channels>
	</thing-type>




    <channel-type id="color">
        <item-type>Color</item-type>
        <label>Color</label>
        <description>The color channel allows to control the color of a light.
            It is also possible to dim values and switch the light on and off.
        </description>
        <category>ColorLight</category>
    </channel-type>

    <channel-type id="brightness">
        <item-type>Dimmer</item-type>
        <label>Brightness</label>
        <description>The brightness channel allows to control the brightness of a light.
            It is also possible to switch the light on and off.
        </description>
        <category>DimmableLight</category>
    </channel-type>

	<channel-type id="switch">
		<item-type>Switch</item-type>
		<label>Switch device On/Off</label>
		<description></description>
		<category>Light</category>
		<tags>
			<tag>lighting</tag>
		</tags>
	</channel-type>

	<channel-type id="dimmer">
		<item-type>Slider</item-type>
		<label>Set the level</label>
		<description></description>
		<category>Light</category>
		<tags>
			<tag>lighting</tag>
		</tags>
	</channel-type>

	<channel-type id="humidity">
		<item-type>Number</item-type>
		<label>Relative Humidity</label>
		<description>Measured relative humidity</description>
		<category>Humidity</category>
		<tags>
			<tag>heating</tag>
		</tags>
		<state pattern="%d °C" readOnly="true">
		</state>
	</channel-type>

	<channel-type id="temperature">
		<item-type>Number</item-type>
		<label>Temperature</label>
		<description>Measured temperature</description>
		<category>Temperature</category>
		<tags>
			<tag>heating</tag>
		</tags>
		<state pattern="%d °C" readOnly="true">
		</state>
	</channel-type>


</thing:thing-descriptions>
